{
  "manifest_version": 3,
  "name": "X Post Blocker",
  "version": "1.0",
  "description": "Block posts from specific users on X",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}